{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('notice') %}
			<div class="alert alert-success mt-4 mb-b">
				{{ message }}
			</div>
		{% endfor %}
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Email</th>
					<th scope="col">Téléphone</th>
					<th scope="col">Collectivités</th>
					<th scope="col">Extranets</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for data in list %}
					<tr>
						<th scope="row">{{ data.id}}
						</th>
						<td>{{ data.nom }}</td>
						<td>{{ data.prenom }}</td>
						<td>{{ data.email }}</td>
						<td>{{ data.telephone }}</td>
						<td>{{ data.collectivites }}</td>
						<td>{{ data.extranets }}</td>
						<td>
							<a class="btn btn-warning" href="{{ path('update',{'id': data.id }) }}">Mettre à Jour</a>
							<a class="btn btn-danger" href="{{ path('delete',{'id': data.id }) }}">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% endblock %}
